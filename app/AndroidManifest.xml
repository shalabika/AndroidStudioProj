<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGymApp"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name="com.example.fitnessapp.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Category Activity -->
        <activity
            android:name="com.example.fitnessapp.CategoryActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fitnessapp.SubcategoryActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fitnessapp.ExerciseDetailActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fitnessapp.DayMenuActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fitnessapp.MealsActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fitnessapp.EducationActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fitnessapp.BmiActivity"
            android:exported="true" />
    </application>

</manifest>